<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/profil_cover"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/drawer_header_profil"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="#CB2A2C2C"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img_profil"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15sp"
            android:layout_marginRight="15sp"
            android:src="@drawable/ic_account_circle_black" />

        <TextView
            android:id="@+id/tv_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_profil"
            android:layout_toRightOf="@+id/img_profil"
            android:text="First_Name_User"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_first_name"
            android:layout_toEndOf="@+id/img_profil"
            android:layout_toRightOf="@+id/img_profil"
            android:text="Last_Name_User"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_last_name"
            android:layout_toEndOf="@+id/img_profil"
            android:layout_toRightOf="@+id/img_profil"
            android:text="email.user@gmail.com"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/drawer_header_sign"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="#CB2A2C2C"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:text="Sign In"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="OR"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:text="Sign Up"
            android:textStyle="bold|italic" />
    </LinearLayout>
</LinearLayout>
