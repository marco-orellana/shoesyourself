<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_cart_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_cart_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:scaleType="fitXY"
        android:src="@drawable/profil_cover" />

    <TextView
        android:id="@+id/tv_cart_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="35"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="45"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sub_cart_item_quantite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:focusable="false"
            android:text="-" />

        <TextView
            android:id="@+id/tv_cart_item_price_quantite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:text="1999.0 * 52"
            android:textAlignment="center"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn_add_cart_item_quantite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:focusable="false"
            android:text="+" />

    </LinearLayout>
</LinearLayout>